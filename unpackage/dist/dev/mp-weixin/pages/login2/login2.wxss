}
.login {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.logo {
	height: 300rpx;
	width: 300rpx;
	margin-top: 100rpx;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 50rpx;
}
.inputView {

	margin: 40rpx;
	border-radius: 25rpx;
	/*	border: 6rpx solid #9EC2EC;*/

	background-color: #efefef;
	line-height: 95rpx;
	border-width: 4px;
	border-bottom: 2dp;
	align-items: center
}
.keyImage {
	margin-left: 15rpx;
	margin-button: 0rpx;
	margin-top: 30rpx;
